  <!-- 引入 Clipboard.js -->
  <script src="https://cdn.jsdelivr.net/npm/clipboard@2.0.11/dist/clipboard.min.js"></script>
  <script>
    // 复制功能
    const clipboard = new ClipboardJS('.copy-btn');
    clipboard.on('success', function(e) {
      alert('复制成功！');
      e.clearSelection();
    });
    clipboard.on('error', function(e) {
      alert('复制失败，请手动复制！');
    });

    // 卡密输入功能
    const exitBtn = document.querySelector('.btn-exit');
    const submitBtn = document.querySelector('.btn-submit');
    const keyInput = document.getElementById('keyInput');
    const keyModal = document.querySelector('.key-modal');

    exitBtn.addEventListener('click', () => {
      if(confirm('确定要退出吗？')) {
        keyModal.style.display = 'none';
        const message = document.createElement('div');
        message.style.cssText = 'text-align:center;color:#ccc;margin-top:20px;';
        message.textContent = '已退出卡密输入';
        document.querySelector('.content').appendChild(message);
        
        setTimeout(() => {
          message.remove();
          keyModal.style.display = 'block';
        }, 2000);
      }
    });

    submitBtn.addEventListener('click', () => {
      const key = keyInput.value.trim();
      if (key) {
        alert(`卡密提交成功：${key}`);
        keyInput.value = '';
      } else {
        alert('请输入有效的卡密');
        keyInput.focus();
      }
    });

    keyInput.addEventListener('keypress', (e) => {
      if (e.key === 'Enter') {
        submitBtn.click();
      }
    });

    // 导航项点击事件
    document.querySelectorAll('.nav-item').forEach(item => {
      item.addEventListener('click', function() {
        document.querySelectorAll('.nav-item').forEach(nav => {
          nav.classList.remove('active');
        });
        this.classList.add('active');
        
        // 这里可以添加切换不同脚本分类的逻辑
        alert(`切换到：${this.textContent.trim()}`);
      });
    });
  </script>
